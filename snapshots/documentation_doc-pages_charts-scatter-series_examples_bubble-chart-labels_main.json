    }
  ],
  "instanceMethods": [],
  "globals": [],
  "init": [],
  "template": "<div class=\"wrapper\"><div id=\"toolPanel\"><div class=\"slider\"><label for=\"sliderInput\"><strong>Label font size:&nbsp;</strong></label><span id=\"fontSizeSliderValue\">12</span><input type=\"range\" id=\"sliderInput\" min=\"8\" max=\"30\" value=\"12\" step=\"1\" oninput=\"updateFontSize(event)\" onchange=\"updateFontSize(event)\"></div></div>$$CHART$$</div>"
}
