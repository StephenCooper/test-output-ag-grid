{
  "properties": [
    {
      "name": "options"
    }
  ],
  "externalEventHandlers": [
    {
      "name": "updateLegendItemPaddingX",
      "params": "event",
      "body": "function updateLegendItemPaddingX(event) {var value = +event.target.value;options.legend.item.paddingX = value;document.getElementById('xPaddingValue').innerHTML = String(value);}"
    },
    {
      "name": "updateLegendItemPaddingY",
      "params": "event",
      "body": "function updateLegendItemPaddingY(event) {var value = event.target.value;options.legend.item.paddingY = +event.target.value;document.getElementById('yPaddingValue').innerHTML = String(value);}"
    },
    {
      "name": "updateLegendItemSpacing",
      "params": "event",
      "body": "function updateLegendItemSpacing(event) {var value = +event.target.value;options.legend.item.marker.padding = value;document.getElementById('markerPaddingValue').innerHTML = String(value);}"
    }
  ],
  "instanceMethods": [],
  "globals": [],
  "init": [],
  "template": "<div class=\"wrapper\"><div class=\"toolPanel\"><div class=\"slider\"><label for=\"xPaddingLabel\"><strong>item.paddingX:</strong></label><span id=\"xPaddingValue\" class=\"slider-value\">32</span><input type=\"range\" id=\"xPaddingLabel\" min=\"0\" max=\"50\" oninput=\"updateLegendItemPaddingX(event)\" onchange=\"updateLegendItemPaddingX(event)\"></div></div><div class=\"toolPanel\"><div class=\"slider\"><label for=\"yPaddingLabel\"><strong>item.paddingY:</strong></label><span id=\"yPaddingValue\" class=\"slider-value\">8</span><input type=\"range\" id=\"yPaddingLabel\" min=\"0\" max=\"30\" oninput=\"updateLegendItemPaddingY(event)\" onchange=\"updateLegendItemPaddingY(event)\"></div></div><div class=\"toolPanel\"><div class=\"slider\"><label for=\"markerPaddingLabel\"><strong>item.marker.padding:</strong></label><span id=\"markerPaddingValue\" class=\"slider-value\">8</span><input type=\"range\" id=\"markerPaddingLabel\" min=\"0\" max=\"30\" oninput=\"updateLegendItemSpacing(event)\" onchange=\"updateLegendItemSpacing(event)\"></div></div>$$CHART$$</div>"
